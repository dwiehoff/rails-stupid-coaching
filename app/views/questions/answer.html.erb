<% # @answer %>

<% q = params[:question] %>
<quote id="question">
  <p class="question"><%= q %></p>
  <p class="author">– You</p>
</quote>
<quote id="answer">
  <p class="question">
    <% if q == "I am going to work" %>
      Great!
    <% elsif q.end_with?('?') %>
      Silly question, get dressed and go to work!
    <% else %>
      I don't care, get dressed and go to work!
    <% end %>
  </p>
  <p class="author">– Your coach</p>
</quote>

<%= link_to "Ask a new question", ask_path %>
